# Use the official guidellm image as a base
FROM ghcr.io/vllm-project/guidellm:latest

USER root

RUN pip install --no-warn-script-location mlflow boto3

RUN mkdir -p /tmp/.huggingface && chmod -R 777 /tmp/.huggingface

COPY run_benchmark.py /usr/local/bin/run_benchmark.py

ENTRYPOINT ["python3", "/usr/local/bin/run_benchmark.py"]

CMD ["--help"]
