{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "namespace": {
      "type": "string",
      "description": "Namespace to deploy resources"
    },
    "benchmarkTool": {
      "type": "string",
      "description": "Benchmark tool to use"
    },
    "benchmark": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Job name"
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            }
          }
        },
        "env": {
          "type": "object"
        },
        "target": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "processor": {
          "type": "string"
        },
        "backendType": {
          "type": "string"
        },
        "rateType": {
          "type": "string"
        },
        "rate": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          ]
        },
        "data": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "maxSeconds": {
          "type": "string"
        },
        "additionalArgs": {
          "type": "string"
        },
        "nodeSelector": {
          "type": "object"
        },
        "affinity": {
          "type": "object"
        }
      }
    },
    "logPodMatchingLabel": {
      "type": "string"
    },
    "kueue": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "queueName": {
          "type": "string"
        }
      }
    },
    "mlflow": {
      "type": "object",
      "description": "MLflow experiment tracking configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable MLflow experiment tracking"
        },
        "trackingUri": {
          "type": "string",
          "description": "MLflow tracking server URL"
        },
        "experimentName": {
          "type": "string",
          "description": "MLflow experiment name (defaults to benchmark.name if not provided)"
        },
        "auth": {
          "type": "object",
          "description": "MLflow authentication configuration",
          "properties": {
            "secretName": {
              "type": "string",
              "description": "Secret name containing MLflow credentials"
            },
            "usernameKey": {
              "type": "string",
              "description": "Key in the secret for username"
            },
            "passwordKey": {
              "type": "string",
              "description": "Key in the secret for password"
            }
          },
          "required": ["secretName", "usernameKey", "passwordKey"]
        },
        "s3": {
          "type": "object",
          "description": "MLflow S3 credentials from a secret",
          "properties": {
            "secretName": {
              "type": "string",
              "description": "Secret name containing S3 credentials"
            },
            "accessKey": {
              "type": "string",
              "description": "Key in the secret for AWS_ACCESS_KEY_ID"
            },
            "secretKey": {
              "type": "string",
              "description": "Key in the secret for AWS_SECRET_ACCESS_KEY"
            },
            "bucketNameKey": {
              "type": "string",
              "description": "Key in the secret for S3 bucket name (used to construct MLFLOW_ARTIFACTS_DESTINATION)"
            },
            "regionKey": {
              "type": "string",
              "description": "Key in the secret for AWS region"
            }
          }
        }
      },
      "required": ["enabled"]
    }
  }
}
