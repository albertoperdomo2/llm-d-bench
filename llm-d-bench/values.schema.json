{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "namespace": {
      "type": "string",
      "description": "Namespace to deploy resources"
    },
    "benchmarkTool": {
      "type": "string",
      "description": "Benchmark tool to use"
    },
    "benchmark": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Job name"
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            }
          }
        },
        "env": {
          "type": "object"
        },
        "target": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "processor": {
          "type": "string"
        },
        "backendType": {
          "type": "string"
        },
        "rateType": {
          "type": "string"
        },
        "rate": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          ]
        },
        "data": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "maxSeconds": {
          "type": "string"
        },
        "additionalArgs": {
          "type": "string"
        },
        "nodeSelector": {
          "type": "object"
        },
        "affinity": {
          "type": "object"
        }
      }
    },
    "logPodMatchingLabel": {
      "type": "string"
    },
    "pvc": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean",
          "description": "Whether to create a new PVC"
        },
        "name": {
          "type": "string",
          "description": "PVC name"
        },
        "size": {
          "type": "string",
          "pattern": "^[0-9]+(Ei|Pi|Ti|Gi|Mi|Ki|E|P|T|G|M|K)?$",
          "description": "Storage size"
        }
      }
    },
    "kueue": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "queueName": {
          "type": "string"
        }
      }
    },
    "s3": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "bucket": {
          "type": "string"
        },
        "endpoint": {
          "type": "string"
        },
        "region": {
          "type": "string"
        },
        "secretName": {
          "type": "string"
        }
      }
    }
  }
}
