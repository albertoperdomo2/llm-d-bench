{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "namespace": {
      "type": "string",
      "description": "Namespace to deploy resources"
    },
    "benchmarkTool": {
      "type": "string",
      "description": "Benchmark tool to use"
    },
    "jobType": {
      "type": "string",
      "enum": ["benchmark", "cleanup", "pvc", "none"],
      "description": "Type of job to deploy"
    },
    "benchmark": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Job name"
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            }
          }
        },
        "env": {
          "type": "object"
        },
        "target": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "processor": {
          "type": "string"
        },
        "backendType": {
          "type": "string"
        },
        "rateType": {
          "type": "string"
        },
        "rate": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          ]
        },
        "data": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "maxSeconds": {
          "type": "string"
        },
        "additionalArgs": {
          "type": "string"
        },
        "nodeSelector": {
          "type": "object"
        },
        "affinity": {
          "type": "object"
        }
      }
    },
    "cleanup": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Cleanup job name"
        },
        "nodeSelector": {
          "type": "object"
        },
        "affinity": {
          "type": "object"
        }
      }
    },
    "logPodMatchingLabel": {
      "type": "string"
    },
    "monitoring": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable metrics collection during benchmark (runs in background)"
        },
        "rbac": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable RBAC and monitoring infrastructure setup (Service, ServiceMonitor, Role, RoleBinding, ConfigMap)"
            }
          }
        },
        "sidecar": {
          "type": "object",
          "description": "Monitoring sidecar container configuration",
          "properties": {
            "image": {
              "type": "object",
              "properties": {
                "repository": {
                  "type": "string",
                  "description": "Container image repository"
                },
                "tag": {
                  "type": "string",
                  "description": "Container image tag"
                }
              }
            },
            "resources": {
              "type": "object",
              "properties": {
                "requests": {
                  "type": "object",
                  "properties": {
                    "memory": {
                      "type": "string"
                    },
                    "cpu": {
                      "type": "string"
                    }
                  }
                },
                "limits": {
                  "type": "object",
                  "properties": {
                    "memory": {
                      "type": "string"
                    },
                    "cpu": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "thanosUrl": {
          "type": "string",
          "format": "uri",
          "description": "Thanos Querier endpoint URL for vLLM metrics"
        },
        "collectionInterval": {
          "type": "integer",
          "minimum": 1,
          "description": "Metrics collection interval in seconds"
        },
        "metrics": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of specific vLLM metrics to collect (uses defaults if empty)"
        },
        "labels": {
          "type": "string",
          "description": "Label filters for vLLM metrics (key1=value1,key2=value2)"
        },
        "collectNodeMetrics": {
          "type": "boolean",
          "description": "Collect node-level metrics (CPU, memory, network, disk I/O)"
        },
        "logLevel": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR"],
          "description": "Log level for monitoring script"
        }
      }
    },
    "pvc": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean",
          "description": "Whether to create a new PVC"
        },
        "name": {
          "type": "string",
          "description": "PVC name"
        },
        "size": {
          "type": "string",
          "pattern": "^[0-9]+(Ei|Pi|Ti|Gi|Mi|Ki|E|P|T|G|M|K)?$",
          "description": "Storage size"
        }
      }
    },
    "kueue": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "queueName": {
          "type": "string"
        }
      }
    },
    "s3": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "bucket": {
          "type": "string"
        },
        "endpoint": {
          "type": "string"
        },
        "region": {
          "type": "string"
        },
        "secretName": {
          "type": "string"
        }
      }
    }
  }
}
